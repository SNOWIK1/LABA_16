<Page x:Class="LABA_16.About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LABA_16"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="About">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="back_wpf.png"/>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center">
            <TextBlock Margin="8 0" FontSize="16" FontFamily="Arial" TextWrapping="Wrap">
                This program is designed to demonstrate
                how a multi-window application works.
            </TextBlock>
            <Button Content="Close" Style="{StaticResource btnStyle}" Margin="0 20" Click="go_main"/>
        </StackPanel>
        
    </Grid>
</Page>
